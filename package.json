{
  "name": "@shelf/pspdfkit-ssr",
  "version": "2.1.4",
  "description": "Utilities to work with PSPDFKit's server-side rendering",
  "license": "MIT",
  "repository": "shelfio/pspdfkit-ssr",
  "author": {
    "name": "Vlad Holubiev",
    "email": "vlad@shelf.io",
    "url": "shelf.io"
  },
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "rm -rf lib/ && yarn build:types && babel src --out-dir lib --ignore '**/*.test.ts' --extensions '.ts' && find ./lib -name '*.test.d.ts' -delete",
    "build:types": "tsc --emitDeclarationOnly --declaration --isolatedModules false --declarationDir lib",
    "coverage": "jest --coverage",
    "lint": "eslint . --fix",
    "prepack": "yarn build",
    "test": "jest src",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "main": "lib",
  "files": [
    "lib"
  ],
  "types": "lib/index.d.ts",
  "keywords": [
    "pspdfkit",
    "ssr"
  ],
  "dependencies": {
    "form-data": "2.5.1",
    "jsonwebtoken": "8.5.1",
    "ms": "3.0.0-canary.1",
    "node-fetch": "2.6.1"
  },
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.8.4",
    "@shelf/babel-config": "0.1.4",
    "@shelf/eslint-config": "2.4.1",
    "@shelf/prettier-config": "1.0.0",
    "@shelf/tsconfig": "0.0.6",
    "@types/jest": "26.0.9",
    "@types/jsonwebtoken": "8.3.7",
    "@types/node": "12",
    "@types/node-fetch": "2.5.4",
    "eslint": "8.0.1",
    "husky": "4.2.3",
    "jest": "26.2.2",
    "lint-staged": "10.0.9",
    "prettier": "2.0.5",
    "typescript": "4.4.4"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "git add"
    ],
    "*.{html,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": "@shelf/prettier-config",
  "babel": {
    "extends": "@shelf/babel-config/backend"
  }
}
